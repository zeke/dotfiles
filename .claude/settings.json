{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(find:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git check-ignore:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(npm start:*)",
      "Bash(npm test:*)",
      "Bash(open:*)",
      "Bash(script/bootstrap:*)",
      "Bash(script/format:*)",
      "Bash(script/lint:*)",
      "Bash(script/setup:*)",
      "Bash(script/start:*)",
      "Bash(script/test:*)",
      "Bash(time:*)",
      "WebFetch(domain:*)",
      "WebSearch"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(gh pr create *)",
      "Bash(gh pr update *)"
    ],
    "deny": [
      "Bash(gh pr merge *)",
      "Bash(gh pr delete *)"
    ]
  } 
}