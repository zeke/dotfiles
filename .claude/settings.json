{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(find:*)",
      "Bash(gh pr create :*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr update :*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git check-ignore:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git push:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(npm start:*)",
      "Bash(npm test:*)",
      "Bash(open:*)",
      "Bash(script/bootstrap:*)",
      "Bash(script/format:*)",
      "Bash(script/lint:*)",
      "Bash(script/setup:*)",
      "Bash(script/start:*)",
      "Bash(script/test:*)",
      "Bash(scripts/bootstrap:*)",
      "Bash(scripts/format:*)",
      "Bash(scripts/lint:*)",
      "Bash(scripts/setup:*)",
      "Bash(scripts/start:*)",
      "Bash(scripts/test:*)",
      "Bash(time:*)",
      "Edit",
      "WebFetch(domain:*)",
      "WebSearch"
    ],
    "deny": [
      "Bash(gh pr merge :*)",
      "Bash(gh pr delete :*)",
      "Read(./.env)"
    ],
    "ask": [
      "Bash(git reset:*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/z/git/zeke/dotfiles/.claude/hooks/aggregate-prompts.sh UserPromptSubmit"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/z/git/zeke/dotfiles/.claude/hooks/notify-input-needed.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "feature-dev@claude-code-plugins": false,
    "frontend-design@claude-code-plugins": true,
    "beads@beads-marketplace": true
  }
}
